<div class="row">
    <div class="col-sm-2">
        <h2>About Me</h2>
        <h5>Photo of me:</h5>
        <div class="fakeimg"></div>
    </div>
    <div class="col-sm-8">
        <h1>{{object.name}}</h1>
        <div class="container-fluid">
            <h2>List of project's tasks</h2>

            <!--To Search by name task-->
            <input type="text" id="myInput" class = "form-control" onkeyup="myFunction4(0,'myInput')" placeholder="Search Task.." title="Type in a name">

            <!-- To Search by person assignee-->
            <div class="form-group">
                <label for="assignee">Assigned to:</label>
                <select class="form-control" name="assignee" id="assignee"  onchange="myFunction4(1,'assignee')" value = "">
                        <option></option>
                    {{# each users}}
                        <option>{{this.firstname}} {{this.name}}</option>
                    {{/each}}
                </select>
            </div>

            <!--To Search by Status-->
            <div class="form-group">
                <label for="status">Status:</label>
                <select class="form-control" name="status" id="status"  onchange="myFunction4(2,'status')" value = "">
                    <option></option>
                    {{# each status}}
                        <option>{{this.name}} </option>
                    {{/each}}
                </select>
            </div>

             </div>

            <table id ="myTable" class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Assigned to</th>
                    <th scope="col">Status</th>
                    <th scope="col">Edit task</th>
                </tr>
                </thead>

                <tbody>

                {{#each tasks}}

                    <tr>

                        <td> <a href="/task/{{this._id}}">{{this.name}}</a></td>
                        <td>{{this.assignee.firstname}} {{this.assignee.name}}</td>
                        <td>{{this.status.name}}</td>
                        <td><a href="/task/{{this._id}}/modify"><img src="https://img.icons8.com/metro/26/000000/edit-property.png"></a></td>

                    </tr>

                {{/each}}

                </tbody>
            </table>
            <a href="/project/{{object._id}}/add" class="btn btn-primary btn-lg active" role="button" aria-pressed="true" style="margin-bottom : 10px">Add new task to the project</a>

        </div>
    </div>
</div>


<script>
    function myFunction4(tablePosition, Id) {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById(Id);
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[tablePosition];
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1 ) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }


</script>

