
<script src='/js/filtrage.js'></script>

<div class="row">
    <div class="col-sm-2">
        <h2>About Me</h2>
        <h5>Photo of me:</h5>
        <div class="fakeimg"></div>
    </div>
    <div class="col-sm-8">
        <h1>{{object.name}}</h1>
        <div class="container-fluid">
            <h2>List of project's tasks</h2>


        </div>

            <table id ="myTable" class="table table-hover">
                <thead>
                <tr>
                    <th  scope="col">   Name
                        <!--To Search by name task-->
                    <input type="text" id="myInput" class = "form-control" onkeyup="filterColective(0,'myInput',1,'assignee',2,'status',3,'start_date',4,'due_date')" placeholder="Search Task.." title="Type in a name">

                    </th>
                    <th scope="col">  Assigned to
                        <select class="form-control" name="assignee" id="assignee"  onchange="filterColective(0,'myInput',1,'assignee',2,'status',3,'start_date',4,'due_date')" value = "">
                            <option></option>
                            {{# each users}}
                                <option title = "{{this.firstname}} {{this.name}}">{{this.firstname}} {{this.name}}</option>
                            {{/each}}
                        </select>

                    </th>
                    <th scope="col"> Status
                        <!--To Search by Status-->
                            <select class="form-control" name="status" id="status"  onchange="filterColective(0,'myInput',1,'assignee',2,'status',3,'start_date',4,'due_date')" value = "">
                                <option></option>
                                {{# each status}}
                                    <option title = " {{this.name}}">{{this.name}}</option>
                                {{/each}}
                            </select>

                    </th>
                    <th scope="col">Start date
                        <input type="date" class="form-control" name="start_date" id = "start_date" value=""
                               onkeyup="filterColective(0,'myInput',1,'assignee',2,'status',3,'start_date',4,'due_date')"  placeholder="Enter start date">
                    </th>
                    <th scope="col">Due date
                        <input type="date" class="form-control" name="due_date" value="" id = "due_date"
                               onkeyup="filterColective(0,'myInput',1,'assignee',2,'status',3,'start_date',4,'due_date')" placeholder="Enter due date">
                    </th>
                    <th scope="col">Edit task</th>
                </tr>
                </thead>

                <tbody>

                {{#each tasks}}

                    <tr>

                        <td> <a href="/task/{{this._id}}">{{this.name}}</a></td>
                        <td>{{this.assignee.firstname}} {{this.assignee.name}}</td>
                        <td>{{this.status.name}}</td>
                        <td>{{this.start_date}}</td>
                        <td>{{this.due_date}}</td>
                        <td><a href="/task/{{this._id}}/modify"><img src="https://img.icons8.com/metro/26/000000/edit-property.png"></a></td>

                    </tr>

                {{/each}}



                </tbody>
            </table>
            <a href="/project/{{object._id}}/add" class="btn btn-primary btn-lg active" role="button" aria-pressed="true" style="margin-bottom : 10px">Add new task to the project</a>

        </div>
    </div>
</div>


