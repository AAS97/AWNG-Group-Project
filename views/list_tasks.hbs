<div class="container" style="margin-top:30px; margin-left : 10px">
    <div class="row">
        <div class="col-sm-2">
            <h2>About Me</h2>
            <h5>Photo of me:</h5>
            <div class="fakeimg"></div>
        </div>
        <div class="col-sm-10">
            <div class="container-fluid">
                <h1>List of my tasks</h1>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Project</th>
                        <th scope="col">Status</th>
                        <th scope="col">Start date</th>
                        <th scope="col">Due date</th>
                        <th scope="col">Edit task</th>
                    </tr>
                    </thead>

                    <tbody>

                    {{#each object}}

                        <tr>

                            <td> <a href="/task/{{this._id}}">{{this.name}}</a></td>
                            <td>{{this.desciption}}</td>
                            <td>{{this.project.name}}</td>
                            <td>{{this.status.name}}</td>
                            <td>{{this.start_date}}</td>
                            <td>{{this.due_date}}</td>
                            <td><a href="/task/{{this._id}}/modify"><img src="https://img.icons8.com/metro/26/000000/edit-property.png"></a></td>


                        </tr>

                    {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
